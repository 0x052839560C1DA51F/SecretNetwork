enclave {

    // This header is generated during the build of the enclave-ffi-types dependency
    include "target/headers/enclave-ffi-types.h"

    trusted {
        EnclaveBuffer ecall_allocate([in, count=length] const uint8_t* buffer, const size_t length);

        InitResult ecall_init(
            [in, count=contract_len] const uint8_t* contract,
            const size_t contract_len,
            [in, count=env_len] const uint8_t* env,
            const size_t env_len,
            [in, count=msg_len] const uint8_t* msg,
            const size_t msg_len,
        );

        HandleResult ecall_handle(
            [in, count=contract_len] const uint8_t* contract,
            const size_t contract_len,
            [in, count=env_len] const uint8_t* env,
            const size_t env_len,
            [in, count=msg_len] const uint8_t* msg,
            const size_t msg_len,
        );

        QueryResult ecall_query(
            [in, count=contract_len] const uint8_t* contract,
            const size_t contract_len,
            [in, count=msg_len] const uint8_t* msg,
            const size_t msg_len,
        );
    }

    untrusted {
        UserSpaceBuffer ocall_allocate([in, count=length] const uint8_t* buffer, const size_t length);

        EnclaveBuffer ocall_read_db(
            const uint64_t instance_id,
            [in, count=key_len] const uint8_t* key,
            const size_t key_len,
        );

        void ocall_write_db(
            const uint64_t instance_id,
            [in, count=key_len] const uint8_t* key,
            const size_t key_len,
            [in, count=value_len] const uint8_t* value,
            const size_t value_len,
        );
    }
}
